generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                String         @id @default(cuid())
  email             String         @unique
  name              String?
  password          String
  role              UserRole       @default(OWNER)
  status            ApprovalStatus @default(PENDING)
  emailVerified     DateTime?
  image             String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  profileImage      String?
  phone             String?
  address           String?
  apiKey            String?        @unique
  apiKeyExpiry      DateTime?
  isVerified        Boolean        @default(false)
  isActive          Boolean        @default(false)
  otpCode           String?
  otpExpires        DateTime?
  paymentProof      String?
  paymentProofSize  Int?
  paymentMethod     String?
  paymentUploadedAt DateTime?
  approvedAt        DateTime?
  chatMessages      ChatMessage[]
  chatSessions      ChatSession[]
  company           Company?
  sessions          Session[]
  upgradeRequests   UpgradeRequest[]

  @@map("users")
}

model Company {
  id                    String           @id @default(cuid())
  name                  String
  email                 String           @unique
  phone                 String?
  address               String?
  logo                  String?
  logoSize              Int?
  subscriptionTier      SubscriptionTier @default(FREE)
  subscriptionExpiry    DateTime?
  storageResetDate      DateTime?
  storageBaselineUsage  BigInt?          @default(0)
  isActive              Boolean          @default(false)
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
  ownerId               String           @unique
  owner                 User             @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  customers             Customer[]
  employees             Employee[]
  products              Product[]
  stores                Store[]
  transactions          Transaction[]
  importHistory         ImportHistory[]
  upgradeRequests       UpgradeRequest[]
  aiChatQuota           AiChatQuota?

  @@map("companies")
}

model Store {
  id           String        @id @default(cuid())
  name         String
  code         String
  address      String?
  phone        String?
  email        String?
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  companyId    String
  members      Customer[]
  employees    Employee[]
  products     Product[]
  company      Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@unique([companyId, code])
  @@map("stores")
}

model Product {
  id                    String            @id @default(cuid())
  name                  String
  description           String?
  sku                   String
  barcode               String?
  price                 Decimal           @db.Decimal(10, 2)
  cost                  Decimal?          @db.Decimal(10, 2)
  stock                 Int               @default(0)
  minStock              Int               @default(0)
  category              String?
  brand                 String?
  unit                  String            @default("pcs")
  weight                Float?
  dimensions            String?
  imageUrl              String?
  imageSize             Int?
  isActive              Boolean           @default(true)
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  companyId             String
  storeId               String?
  brandCommissionRate   Decimal?          @default(0.0000) @db.Decimal(5, 4)
  brandCommissionAmount Decimal?          @default(0.00) @db.Decimal(12, 2)
  company               Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)
  store                 Store?            @relation(fields: [storeId], references: [id])
  transactionItems      TransactionItem[]

  @@unique([companyId, sku])
  @@unique([companyId, barcode])
  @@index([companyId], map: "products_companyId_fkey")
  @@index([storeId], map: "products_storeId_fkey")
  @@map("products")
}

model Customer {
  id                 String        @id @default(cuid())
  uniqueId           String        @unique
  name               String
  email              String?
  phone              String?
  address            String?
  dateOfBirth        DateTime?
  gender             String?
  isActive           Boolean       @default(true)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  companyId          String
  isMember           Boolean       @default(false)
  membershipDiscount Float         @default(0)
  membershipExpiry   DateTime?
  membershipId       String?       @unique
  membershipJoinDate DateTime?
  membershipPoints   Int           @default(0)
  membershipTier     String?
  membershipStoreId  String?
  company            Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  membershipStore    Store?        @relation(fields: [membershipStoreId], references: [id])
  transactions       Transaction[]

  @@index([companyId], map: "customers_companyId_fkey")
  @@index([membershipStoreId], map: "customers_membershipStoreId_fkey")
  @@map("customers")
}

model Transaction {
  id            String            @id @default(cuid())
  transactionNo String            @unique
  date          DateTime          @default(now())
  subtotal      Decimal           @db.Decimal(12, 2)
  tax           Decimal           @default(0.00) @db.Decimal(12, 2)
  discount      Decimal           @default(0.00) @db.Decimal(12, 2)
  total         Decimal           @db.Decimal(12, 2)
  paymentMethod String
  paymentStatus String            @default("completed")
  notes         String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  companyId     String
  customerId    String
  storeId       String?
  employeeId    String?
  currency      String?           @default("IDR") @db.VarChar(10)
  items         TransactionItem[]
  company       Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)
  customer      Customer          @relation(fields: [customerId], references: [id])
  employee      Employee?         @relation(fields: [employeeId], references: [id])
  store         Store?            @relation(fields: [storeId], references: [id])

  @@index([companyId], map: "transactions_companyId_fkey")
  @@index([customerId], map: "transactions_customerId_fkey")
  @@index([employeeId], map: "transactions_employeeId_fkey")
  @@index([storeId], map: "transactions_storeId_fkey")
  @@map("transactions")
}

model TransactionItem {
  id              String      @id @default(cuid())
  quantity        Int
  unitPrice       Decimal     @db.Decimal(10, 2)
  totalPrice      Decimal     @db.Decimal(12, 2)
  createdAt       DateTime    @default(now())
  transactionId   String
  productId       String
  addOnPrice      Decimal?    @default(0.00) @db.Decimal(10, 2)
  discountPercent Decimal?    @default(0.00) @db.Decimal(5, 2)
  discountAmount  Decimal?    @default(0.00) @db.Decimal(10, 2)
  totalCost       Decimal?    @default(0.00) @db.Decimal(12, 2)
  profit          Decimal?    @default(0.00) @db.Decimal(12, 2)
  paidToBrand     Decimal?    @default(0.00) @db.Decimal(12, 2)
  product         Product     @relation(fields: [productId], references: [id])
  transaction     Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@index([productId], map: "transaction_items_productId_fkey")
  @@index([transactionId], map: "transaction_items_transactionId_fkey")
  @@map("transaction_items")
}

model Employee {
  id           String        @id @default(cuid())
  email        String        @unique
  name         String
  password     String
  role         UserRole
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  companyId    String
  storeId      String?
  otpCode      String?
  otpExpires   DateTime?
  company      Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  store        Store?        @relation(fields: [storeId], references: [id])
  transactions Transaction[]

  @@index([companyId], map: "employees_companyId_fkey")
  @@index([storeId], map: "employees_storeId_fkey")
  @@map("employees")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "sessions_userId_fkey")
  @@map("sessions")
}

model ChatSession {
  id        String        @id @default(cuid())
  adminId   String
  adminName String
  adminRole String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  messages  ChatMessage[]
  admin     User          @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId], map: "chat_sessions_adminId_fkey")
  @@map("chat_sessions")
}

model ChatMessage {
  id        String      @id @default(cuid())
  sessionId String
  adminId   String
  message   String      @db.Text
  isUser    Boolean     @default(true)
  createdAt DateTime    @default(now())
  admin     User        @relation(fields: [adminId], references: [id], onDelete: Cascade)
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([adminId], map: "chat_messages_adminId_fkey")
  @@index([sessionId], map: "chat_messages_sessionId_fkey")
  @@map("chat_messages")
}

model ImportHistory {
  id        String   @id @default(cuid())
  fileName  String
  fileSize  Int
  filePath  String
  status    String   @default("completed")
  createdAt DateTime @default(now())
  companyId String
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId], map: "import_history_companyId_fkey")
  @@map("import_history")
}

enum UserRole {
  SUPERADMIN
  ADMIN
  KASIR
  OWNER
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum SubscriptionTier {
  FREE
  BASIC
  PREMIUM
  ENTERPRISE
}

enum UpgradeRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model UpgradeRequest {
  id            String               @id @default(cuid())
  userId        String
  companyId     String
  requestedTier SubscriptionTier
  paymentProof  String
  paymentMethod String
  status        UpgradeRequestStatus @default(PENDING)
  requestedAt   DateTime             @default(now())
  approvedAt    DateTime?
  approvedBy    String?
  rejectedAt    DateTime?
  rejectedBy    String?
  rejectionReason String?
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  
  user          User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  company       Company              @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([userId], map: "upgrade_requests_userId_fkey")
  @@index([companyId], map: "upgrade_requests_companyId_fkey")
  @@map("upgrade_requests")
}

model AiChatQuota {
  id              String   @id @default(cuid())
  companyId       String   @unique
  tokensUsed      Int      @default(0)
  requestsUsed    Int      @default(0)
  weeklyResetDate DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  company         Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId], map: "ai_chat_quota_companyId_fkey")
  @@map("ai_chat_quota")
}
