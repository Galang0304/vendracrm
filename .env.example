# ========================================
# PRODUCTION DEPLOYMENT SETTINGS
# ========================================
# Untuk deployment produksi, wajib set variable ini:
# - APP_URL atau NEXTAUTH_URL = URL domain Anda (https://yourdomain.com)
# - PORT = Port server (default: 3000)
# - NODE_ENV = production

# Application URL (WAJIB untuk production)
# Contoh: https://vendra.yourdomain.com atau https://crm.company.com
APP_URL="http://localhost:3001"
NEXTAUTH_URL="http://localhost:3001"

# Server Port (optional, default: 3000)
PORT="3001"

# Node Environment
NODE_ENV="development"

# Database (WAJIB)
# Production: Ganti dengan database production Anda
DATABASE_URL="mysql://username:password@localhost:3306/vendra_crm"
DATABASE_MAX_CONNECTIONS="10"
DATABASE_TIMEOUT="30000"

# NextAuth Secret (WAJIB - generate dengan: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-key-here"

# CORS Allowed Origins (optional, untuk multiple domains pisah dengan koma)
# Contoh: https://domain1.com,https://domain2.com
# ALLOWED_ORIGINS="https://yourdomain.com"

# Vendra AI Configuration
# This is Vendra's OpenAI API key - customers don't need their own
VENDRA_OPENAI_API_KEY="your-openai-api-key-here"

# Optional: Override AI settings
# VENDRA_AI_ENABLED="true"
# VENDRA_AI_MODEL="gpt-4o-mini"
# VENDRA_AI_MAX_TOKENS="1000"
# VENDRA_AI_TEMPERATURE="0.7"

# Email Configuration (Gmail SMTP)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="vendracrm@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="Vendra CRM <vendracrm@gmail.com>"

# SuperAdmin Email for Notifications
SUPERADMIN_EMAIL="admin@vendra.com"
